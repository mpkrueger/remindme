<h1>New Reminder</h1>
<div class="row">
  <div class="col-md-8">
    <%= form_for @reminder do |f| %>
      <div class="form-group">
        <%= f.label :message %>
        <%= f.text_field :message, class: "form-control", placeholder: "Remind me to..." %>
      </div>
      
      <div class="form-group">
        <%= f.label "Date" %>
        <%= f.date_field :send_time_date %>
      </div>
      
      <div class="form-group">
        <%= f.label "Time" %>
        <%= f.time_field :send_time_time %>
      </div>
      

      <%= f.submit "Save", class: "btn btn-success" %>
    <% end %>
  </div>
</div>